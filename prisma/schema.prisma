generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"] // ‚ùó Don't include "auth"
}

enum Role {
  Admin
  Player

  @@schema("public")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  name        String?
  createdAt   DateTime     @default(now())
  role        Role         @default(Player)
  bonuses     Bonus[]
  predictions Prediction[]

  @@schema("public")
}

model Fixture {
  id          String       @id @default(uuid())
  homeTeam    String
  awayTeam    String
  matchDate   DateTime
  createdAt   DateTime     @default(now())
  predictions Prediction[]
  result      Result?

  @@schema("public")
}

model Prediction {
  id        String @id @default(uuid())
  userId    String
  fixtureId String
  homeScore Int
  awayScore Int
  points    Int?

  user    User    @relation(fields: [userId], references: [id])
  fixture Fixture @relation(fields: [fixtureId], references: [id])

  @@unique([userId, fixtureId])
  @@schema("public")
}

model Result {
  id        String   @id @default(uuid())
  fixtureId String   @unique
  homeScore Int
  awayScore Int
  createdAt DateTime @default(now())
  fixture   Fixture  @relation(fields: [fixtureId], references: [id])

  @@schema("public")
}

model Bonus {
  id        String    @id @default(uuid())
  userId    String
  type      String
  usedOn    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])

  @@schema("public")
}
